{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "virtualNetworks_hana_vnet_name": {
            "defaultValue": "hana-vnet",
            "type": "String"
        },
        "availabilitySets_hana_avset_name": {
            "defaultValue": "hana-avset",
            "type": "String"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Compute/availabilitySets",
            "apiVersion": "2018-10-01",
            "name": "[parameters('availabilitySets_hana_avset_name')]",
            "location": "southeastasia",
            "sku": {
                "name": "Aligned"
            },
            "properties": {
                "platformUpdateDomainCount": 5,
                "platformFaultDomainCount": 2,
                "virtualMachines": []
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2018-12-01",
            "name": "[parameters('virtualNetworks_hana_vnet_name')]",
            "location": "southeastasia",
            "properties": {
                "provisioningState": "Succeeded",
                "resourceGuid": "b1d0c604-e960-4759-9620-e13aec6f47b7",
                "addressSpace": {
                    "addressPrefixes": [
                        "10.1.0.0/16"
                    ]
                },
                "subnets": [
                    {
                        "name": "application",
                        "etag": "W/\"10bdb3ed-f5a5-4611-820c-f1c886285a21\"",
                        "properties": {
                            "provisioningState": "Succeeded",
                            "addressPrefix": "10.1.0.0/24",
                            "delegations": []
                        }
                    },
                    {
                        "name": "database",
                        "etag": "W/\"10bdb3ed-f5a5-4611-820c-f1c886285a21\"",
                        "properties": {
                            "provisioningState": "Succeeded",
                            "addressPrefix": "10.1.1.0/25",
                            "serviceEndpoints": [],
                            "delegations": []
                        }
                    },
                    {
                        "name": "remoterdp",
                        "etag": "W/\"10bdb3ed-f5a5-4611-820c-f1c886285a21\"",
                        "properties": {
                            "provisioningState": "Succeeded",
                            "addressPrefix": "10.1.2.0/25",
                            "serviceEndpoints": [],
                            "delegations": []
                        }
                    }
                ],
                "virtualNetworkPeerings": [],
                "enableDdosProtection": false,
                "enableVmProtection": false
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworks/subnets",
            "apiVersion": "2018-12-01",
            "name": "[concat(parameters('virtualNetworks_hana_vnet_name'), '/application')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks', parameters('virtualNetworks_hana_vnet_name'))]"
            ],
            "properties": {
                "provisioningState": "Succeeded",
                "addressPrefix": "10.1.0.0/24",
                "delegations": []
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworks/subnets",
            "apiVersion": "2018-12-01",
            "name": "[concat(parameters('virtualNetworks_hana_vnet_name'), '/database')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks', parameters('virtualNetworks_hana_vnet_name'))]"
            ],
            "properties": {
                "provisioningState": "Succeeded",
                "addressPrefix": "10.1.1.0/25",
                "serviceEndpoints": [],
                "delegations": []
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworks/subnets",
            "apiVersion": "2018-12-01",
            "name": "[concat(parameters('virtualNetworks_hana_vnet_name'), '/remoterdp')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks', parameters('virtualNetworks_hana_vnet_name'))]"
            ],
            "properties": {
                "provisioningState": "Succeeded",
                "addressPrefix": "10.1.2.0/25",
                "serviceEndpoints": [],
                "delegations": []
            }
        }
    ]
}